<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationStyle">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="itemIconTint">@color/bottom_navigation_selector</item>
        <item name="android:textColor">@color/bottom_navigation_selector</item>
    </style>
    <style name="EditTextStyle">
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:textColorHint">?attr/android:textColorHint</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Medium22TextStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/sp_22</item>
    </style>
    <style name="Medium22TextStyleAlwaysBlack" parent="Medium22TextStyle">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="AlwaysBlack">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Bold32TextStyle">
        <item name="android:textSize">@dimen/sp_32</item>
        <item name="fontFamily">@font/ys_display_bold</item>
    </style>
    <style name="Regular16TextStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>
    <style name="Medium16TextStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>
    <style name="VacancyViewCardHeader22TextStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/sp_22</item>
    </style>
    <style name="VacancyViewCard16TextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="filterPlaceAndIndustry16TextStyle">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="filterPlaceAndIndustry12TextStyle">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="InputLayoutFilterSetting">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">?attr/android:textColorHint</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="hintTextColor">@color/tap_color_selector_filter_edit_text</item>

    </style>
    <style name="InputTextFilterSetting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:textColor">?attr/android:textColorHint</item>
    </style>

    <style name="FilterCheckBox16TextStyle">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>
    <style name="SettingsFilterTextStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>
    <style name="ExpectedSalaryTextStyle">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/android:textColorHint</item>
    </style>
    <style name="BigBlueButtons">
        <item name="backgroundTint">@color/blue</item>
        <item name="background">@drawable/background_blue_rounded</item>
        <item name="android:textColor">@color/white_day</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingVertical">@dimen/dp_20</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ButtonsStyle">
        <item name="tint">?attr/colorPrimary</item>
    </style>
    <style name="ProgressBarStyle">
        <item name="android:indeterminateTint">@color/blue</item>
    </style>
    <style name="ThrowOffRedTextStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="text_developer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>
    <style name="search_input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:paddingVertical">0dp</item>
        <item name="android:paddingRight">@dimen/dp_16</item>
        <item name="startIconMinSize">@dimen/dp_24</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconScaleType">fitCenter</item>
        <item name="endIconDrawable">@drawable/search_24px_input_edittext_icon</item>
        <item name="endIconMinSize">24dp</item>
        <item name="hintEnabled">false</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="endIconTint">@color/black</item>
    </style>
    <style name="search_input_field">
        <item name="android:background">@null</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">100</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColorHint">?attr/android:textColorHint</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>
</resources>
