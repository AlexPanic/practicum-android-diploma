<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    tools:context=".team.ui.TeamFragment">


    <TextView
        android:id="@+id/teamTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:fontFamily="@font/ys_text_medium"
        android:text="@string/team"
        android:textColor="?attr/colorPrimary"
        android:textSize="@dimen/sp_22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/developedAppTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_16"
        android:fontFamily="@font/ys_display_bold"
        android:maxLines="2"
        android:text="@string/developed_application"
        android:textColor="?attr/colorPrimary"
        android:textSize="@dimen/sp_32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teamTV" />

    <TextView
        android:id="@+id/developer1TV"
        style="@style/text_developer"
        android:layout_marginTop="@dimen/dp_32"
        android:fontFamily="@font/ys_text_medium"
        android:text="@string/best_android_developers_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/developedAppTV" />

    <TextView
        android:id="@+id/developer2TV"
        style="@style/text_developer"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/best_android_developers_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/developer1TV" />

    <TextView
        android:id="@+id/developer3TV"
        style="@style/text_developer"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/best_android_developers_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/developer2TV" />

    <TextView
        android:id="@+id/developer4TV"
        style="@style/text_developer"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/best_android_developers_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/developer3TV" />

    <TextView
        android:id="@+id/developer5TV"
        style="@style/text_developer"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/best_android_developers_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/developer4TV" />
</androidx.constraintlayout.widget.ConstraintLayout>
